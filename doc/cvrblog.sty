\def\fline#1 #2\par{\par\vskip.25\baselineskip\noindent
        \parbox[t]{\fspace}{\small\ttfamily\textcolor{\myflinecolor}{#1}\hfill}%
        \computelinewidth{1.5\fspace}%
        \parbox[t]{\Linewidth}{#2}}

